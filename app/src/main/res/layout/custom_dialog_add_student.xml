<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:id="@+id/displayLinearLayout"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        android:padding="10dp"
        app:cardUseCompatPadding="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
            android:id="@+id/edit_text_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Student "
            android:layout_marginTop="0dp"
            android:textSize="25dp"
            android:textStyle="italic|bold"
            android:padding="10dp"
                />



        <EditText
            android:id="@+id/edit_text_cat_number"
           android:layout_below="@id/edit_text_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="25dp"
            android:textStyle="italic|bold"
            android:padding="10dp"
            android:hint="Enter Contact Number"
            android:inputType="number"

            />


        <EditText
            android:id="@+id/edit_text_cat_email"
            android:layout_below="@id/edit_text_cat_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:textStyle="italic|bold"

            android:inputType="textEmailAddress"
            android:textSize="25dp" />


        <EditText
            android:id="@+id/edit_text_cat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:layout_below="@id/edit_text_cat_email"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textSize="25dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>