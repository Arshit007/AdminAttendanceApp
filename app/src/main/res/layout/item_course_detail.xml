<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/displayLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <!--android:adjustViewBounds="true"-->

        <RelativeLayout
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_code_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:padding="10dp"
                android:scaleType="center"
                android:textSize="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/course_code1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_toRightOf="@id/course_code_text1"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/total_attend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:scaleType="center"
                android:layout_below="@id/course_code1"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/total_attend_value1"
                android:layout_toRightOf="@id/total_attend1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/course_code1"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />



            <TextView
                android:id="@+id/class_attend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/total_attend1"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/class_attend_value1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_attend_value1"
                android:layout_toRightOf="@id/class_attend1"
                android:layout_marginLeft="0dp"
                android:scaleType="center"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/percentage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/class_attend_value1"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/percentage_value1"
                android:layout_toRightOf="@id/percentage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/class_attend_value1"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />


            <TextView
                android:id="@+id/deptName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/percentage1"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/deptNamevalue1"
                android:layout_toRightOf="@id/percentage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/percentage_value1"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />


            <TextView
                android:id="@+id/deptNameField1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/deptName1"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/deptNameFieldValue1"
                android:layout_toRightOf="@id/deptNameField1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/deptNamevalue1"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>